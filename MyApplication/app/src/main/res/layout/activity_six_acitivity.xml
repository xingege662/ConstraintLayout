<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_six_acitivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.changxin.myapplication.SixAcitivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteY="142dp"
        tools:layout_editor_absoluteX="115dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="184dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:layout_marginBottom="40dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_dark_frame"
        tools:layout_editor_absoluteY="32dp"
        tools:layout_editor_absoluteX="48dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_six_acitivity"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintBottom_toBottomOf="@+id/button3" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        app:layout_constraintBottom_toBottomOf="@+id/activity_six_acitivity"
        app:layout_constraintTop_toTopOf="@+id/activity_six_acitivity"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        app:layout_constraintVertical_bias="0.66" />
</android.support.constraint.ConstraintLayout>
